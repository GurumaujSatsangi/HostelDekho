      },
      'Outdoor Stadium': {
        description: 'Large outdoor sports facility.',
        capacity: 'Variable',
        facilities: 'Track, Field, Events, Grounds'
      },
      'Swimming Pool': {
        description: 'Olympic-size swimming facility.',
        capacity: 'Variable',
        facilities: 'Swimming, Training, Aquatics'
      }
    };

    let selectedBlock = null;

    function showBlockInfo(blockName) {
      // Remove active class from all buildings
      document.querySelectorAll('.building').forEach(building => {
        building.classList.remove('active');
      });

      // Add active class to clicked building
      event.target.closest('.building').classList.add('active');

      selectedBlock = blockName;
      const data = blockData[blockName];

      if (data) {
        const infoTitle = document.getElementById('infoTitle');
        const infoSubtitle = document.getElementById('infoSubtitle');
        const infoContent = document.getElementById('infoContent');
        const viewBtn = document.getElementById('viewBtn');

        infoTitle.textContent = blockName;
        infoSubtitle.textContent = data.description;

        let contentHTML = `
          <div class="info-row">
            <span class="info-label">Capacity</span>
            <span class="info-value">${data.capacity}</span>
          </div>
          <div class="info-row">
            <span class="info-label">Facilities</span>
          </div>
          <p class="info-description">${data.facilities}</p>
        `;

        infoContent.innerHTML = contentHTML;
        viewBtn.style.display = 'flex';
      }
    }

    function viewBlockDetails() {
      if (selectedBlock) {
        alert(`Viewing details for: ${selectedBlock}`);
        // In a real app, navigate to detailed page or open modal
      }
    }

    // Initialize with first block
    document.addEventListener('DOMContentLoaded', () => {
      const firstBlock = document.querySelector('.building');
      if (firstBlock) {
        const event = new Event('click', { bubbles: true });
        firstBlock.dispatchEvent(event);
      }
    });
  </script>
</body>
</html>

<style>
  /* Mobile Menu Toggle */
  .mobile-menu-toggle {
    display: none;
    background: transparent;
    border: 1px solid var(--border);
    color: var(--text);
    padding: 8px 12px;
    border-radius: var(--radius-md);
    cursor: pointer;
    font-size: 1.2rem;
  }

  /* Brand wrapper for desktop/mobile layout */
  .brand-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  /* Desktop Navigation Actions Wrapper */
  .nav-actions-wrapper {
    display: flex;
    align-items: center;
    gap: 10px;
  }
  
  @media (max-width: 768px) {
    .mobile-menu-toggle {
      display: block;
    }
    
    .nav-shell {
      position: relative;
    }

    .brand-wrapper {
      width: 100%;
    }
    
    .nav-actions-wrapper {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: rgba(13, 17, 25, 0.98);
      border: 1px solid var(--border);
      border-top: none;
      padding: 12px;
      z-index: 100;
      backdrop-filter: blur(10px);
      flex-direction: column;
      gap: 8px;
    }
    
    .nav-actions-wrapper.show {
      display: flex;
    }
    
    .nav-actions-wrapper .nav-actions {
      margin-bottom: 8px;
      width: 100%;
    }
    
    .nav-actions-wrapper .nav-actions:last-child {
      margin-bottom: 0;
    }
  }
</style>

<nav class="app-navbar">
  <div class="nav-shell">
    <div class="brand-wrapper">
      <a href="/" class="brand">
        <span class="brand-icon"><i class="bi bi-house-heart-fill"></i></span>
        <span>Hostel Dekho</span>
      </a>
      <button class="mobile-menu-toggle" id="mobileMenuToggle" aria-label="Toggle menu">
        <i class="bi bi-list"></i>
      </button>
    </div>
    
    <div class="nav-actions-wrapper" id="navActionsWrapper">
      <div class="nav-actions">
        <a type="button" onclick="mhlayout()" class="btn btn-primary">Mens Hostel Layout</a>
      </div>
    
    </div>
  </div>
</nav>
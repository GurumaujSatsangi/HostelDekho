<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <link rel="shortcut icon" href="/favicon.png" type="image/x-icon" />

    <title>Hostel Dekho</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css"
    />
  </head>
  <body>
    <%- include('partials/navbar') %>
    <main class="page-shell">
      <div class="card">
        <div class="card-header">
          <div>
            <p class="card-title" style="margin:0;">Hostel Details</p>
            <p class="card-description">Home / <%= hosteldata.hostel_name %></p>
          </div>
          <span class="chip"><%= hosteldata.hostel_type %></span>
        </div>
        <div class="table-subtle">
          <table class="table">
            <tbody>
              <tr><th>Hostel</th><td><%= hosteldata.hostel_name %></td></tr>
              <tr><th>Type</th><td><%= hosteldata.hostel_type %></td></tr>
              <tr><th>Bedrooms Available</th><td><%= hosteldata.bed_availability %></td></tr>
              <tr><th>Bed Type</th><td><%= hosteldata.bed_type %></td></tr>
            </tbody>
          </table>
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          <p class="card-title" style="margin:0;">Floor Plans</p>
          <span class="pill-muted">Overview</span>
        </div>
        <% if(floorplan && floorplan.length > 0){ %>
          <div class="layout-grid">
            <% floorplan.forEach(function(floor){ %>
              <div class="card">
                <div class="card-header">
                  <p class="card-title" style="margin:0;">Floor <%= floor.floor %></p>
                </div>
                <div class="card-content">
                  <img src="<%= floor.link %>" class="img-fluid" style="width:100%;" />
                  <a href="/floor/<%= floor.id %>" class="btn btn-primary" style="width: fit-content;">Explore <i class="bi bi-arrow-right-circle-fill"></i></a>
                </div>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <p class="muted">No Floor Plans available!</p>
        <% } %>
      </div>
    </main>
    <%- include('partials/footer') %>
  </body>
</html>

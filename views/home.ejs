<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>Hostel Dekho</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css"
    />
  </head>
  <body>
    <%- include('partials/navbar') %> 
     <div class="container">

     <% if(hosteldata && hosteldata.length>0){
    %>

   
      <div class="row">
        <% hosteldata.forEach(function(hostel, index) { %>
        <div class="col-md-3 mb-4">
          <div class="card h-100">
            <div class="card-header"><b><%= hostel.hostel_name %></b></div>
            <div class="card-body">
              <p class="card-text">
                <span class="badge text-bg-info"
                  ><%= hostel.hostel_type %>
                </span>
                <span class="badge text-bg-info"
                  ><%= hostel.bed_availability %></span
                >
                <span class="badge text-bg-info"><%= hostel.bed_type %></span>
              </p>
              <hr />
              <a
                href="/hostel/<%= hostel.hostel_id %>"
                class="btn btn-primary"
              >
                Explore <i class="bi bi-arrow-right-circle-fill"></i>
              </a>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>

    <% } %> <%- include('partials/footer') %>
  </body>
</html>

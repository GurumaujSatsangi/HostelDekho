<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <link rel="shortcut icon" href="/favicon.png" type="image/x-icon">
    <title>Hostel Dekho</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css"
    />
  </head>
  <body>
    <%- include('partials/navbar') %> 
    <main class="page-shell">
      <section class="hero">
        <h1 style="margin: 0 0 8px;">Discover hostels with a clean, dark dashboard.</h1>
        <p class="muted" style="margin: 0;">Browse available blocks, view floor plans, and drill into rooms â€” now with a Supabase-style dark UI.</p>
      </section>

      <% if(hosteldata && hosteldata.length>0){ %>
      <div class="layout-grid">
        <% hosteldata.forEach(function(hostel) { %>
          <div class="card">
            <div class="card-header">
              <div>
                <p class="card-title"><%= hostel.hostel_name %></p>
                <p class="card-description">Type: <%= hostel.hostel_type %></p>
              </div>
              <span class="chip"><%= hostel.bed_type %></span>
            </div>
            <div class="card-content">
              <div class="inline-actions">
                <span class="pill-muted">Bedrooms: <%= hostel.bed_availability %></span>
              </div>
              <a href="/hostel/<%= hostel.hostel_id %>" class="btn btn-primary" style="width: fit-content;">
                Explore <i class="bi bi-arrow-right-circle-fill"></i>
              </a>
            </div>
          </div>
        <% }); %>
      </div>
      <% } %>
    </main>

    <%- include('partials/footer') %>
  </body>
</html>

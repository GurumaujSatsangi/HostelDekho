<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css"
    />
  </head>
  <body>
    <%- include('partials/navbar') %> <% if(hosteldata && hosteldata.length>0){
    %>

    <div class="container">
      <div class="row">
        <% hosteldata.forEach(function(hostel, index) { %>
        <div class="col-md-3 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title"><%= hostel.hostel_name %></h5>
              <a
                href="/view/hostel/<%= hostel.hostel_id %>"
                class="btn btn-primary"
              >
                Explore <i class="bi bi-arrow-right-circle-fill"></i>
              </a>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>

    <% } %> <%- include('partials/footer') %>
  </body>
</html>
